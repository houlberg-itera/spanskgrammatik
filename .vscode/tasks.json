			"type": "shell",
			"command": "npx create-next-app@latest . --typescript --tailwind --eslint --app --src-dir --turbopack --use-npm",
			"group": "build"
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "npm install",
